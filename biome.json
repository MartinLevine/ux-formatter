{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": true,
		"indentStyle": "space",
		"indentWidth": 2,
		"lineEnding": "lf",
		"lineWidth": 120
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"arrowParentheses": "always",
			"bracketSameLine": true,
			"bracketSpacing": true,
			"indentWidth": 4,
			"indentStyle": "space",
			"jsxQuoteStyle": "double",
			"quoteProperties": "preserve",
			"quoteStyle": "single",
			"semicolons": "asNeeded",
			"trailingComma": "none",
			"lineEnding": "lf",
			"lineWidth": 120
		},
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		}
	}
}